<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HardActivity">

    <TextView
        android:id="@+id/txtTime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="20회"
        android:textColor="#0C0C0C"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nxtBtn3" />

    <Button
        android:id="@+id/nxtBtn3"
        android:layout_width="200dp"
        android:layout_height="88dp"
        android:layout_marginTop="50dp"
        android:text="다음"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exrIv3"
        tools:text="다음" />

    <ImageView
        android:id="@+id/exrIv3"
        android:layout_width="162dp"
        android:layout_height="131dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exrNameTv3"
        app:srcCompat="@android:drawable/btn_dialog" />

    <TextView
        android:id="@+id/exrNameTv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autoText="true"
        android:background="#FAF9F9"
        android:fontFamily="monospace"
        android:text="점핑잭"
        android:textColor="#0E0E0E"
        android:textSize="48sp"
        app:barrierMargin="@dimen/material_emphasis_high_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    //추가부분11.04

    <ImageView
        android:id="@+id/upperBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTime3"
        app:layout_constraintTop_toBottomOf="@+id/nxtBtn3"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageView
        android:id="@+id/downBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTime3"
        app:layout_constraintTop_toBottomOf="@+id/upperBtn"
        app:srcCompat="@android:drawable/arrow_down_float" />

    // /추가부분11.04(업다운 버튼)
</androidx.constraintlayout.widget.ConstraintLayout>