<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/twiter_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/beginBtn"
        android:layout_width="365dp"
        android:layout_height="156dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@+id/normalBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expLvTv"
        app:srcCompat="@drawable/beginner" />

    <ImageButton
        android:id="@+id/normalBtn"
        android:layout_width="365dp"
        android:layout_height="156dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beginBtn"
        app:srcCompat="@drawable/normal" />

    <ImageButton
        android:id="@+id/hardBtn"
        android:layout_width="365dp"
        android:layout_height="156dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalBtn"
        app:srcCompat="@drawable/hard" />

    <TextView
        android:id="@+id/expLvTv"
        android:layout_width="185dp"
        android:layout_height="41dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:text="EXP_LV"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/beginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>